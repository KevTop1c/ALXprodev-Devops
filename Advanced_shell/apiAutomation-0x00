#!/bin/bash

# Pokémon Script
POKEMON_NAME="pikachu"
API_URL="https://pokeapi.co/api/v2/pokemon/${POKEMON_NAME}"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request and handle errors
if curl -s --fail "$API_URL" > "$OUTPUT_FILE" 2>/dev/null; then
    echo "Success! Pokémon data saved to $OUTPUT_FILE"
else
    error_msg="Failed to fetch data for $POKEMON_NAME"
    echo "$(date): $error_msg" >> $ERROR_FILE
    echo "Error: $error_msg - Check $ERROR_FILE"
    exit 1
fi